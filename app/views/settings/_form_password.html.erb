<%= form_with(model: user, class: 'col-span-12 mt-8 md:col-start-3 md:col-span-6') do |f| %>
  <div class="flex flex-col items-start">
    <%= f.label :password, "Password", class: "font-semibold"%>
    <%= f.password_field :password,  placeholder: "password", class: "w-full rounded-lg focus:ring-0 focus:border-black border-2 border-black shadow-hard text-gv-baltic-sea" %>
  </div>
  <%= f.submit nil, class: "mt-3 bg-gv-tulip-pink rounded-lg border-black border-2 shadow-hard p-2 w-full"%>
<% end %>
