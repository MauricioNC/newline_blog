<%= form_with url: search_path, method: :get, class: "relative flex flex-col justify-center mt-10"  do |f| %>
  <%= f.text_field :q, placeholder: "Busca un blog o una noticia", class: "w-full bg-gv-dark-jungle border-2 border-black rounded-lg placeholder:text-gv-oasis-400 text-gv-oasis focus:ring-0 focus:border-black" %>
  <%= f.submit "Buscar",  name: nil,
                              class: "absolute right-0 bg-zinc-900 h-full px-4 border-2 border-black border-l-0 rounded-tr-lg rounded-br-lg" %>
<% end %>