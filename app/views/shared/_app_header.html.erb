<header class="top-bar px-3 md:px-8 lg:px-14 xl:px-64 py-4 w-full z-10 mb-10 border-b-2 border-transparent" data-controller="menu">
  <%= turbo_frame_tag "search-bar", class: "flex flex-row justify-between items-center gap-4" do %>
    <div class="flex flex-row gap-5 items-center xs:justify-between xs:w-1/2 md:w-full lg:w-auto">
      <%= link_to "Logo", root_path, class: 'text-2xl font-semibold', data: { turbo_frame: "_top" } %>
      <%= link_to search_form_path do %>
        <i class="fa-solid fa-magnifying-glass block md:hidden"></i>
      <% end %>
      <%= render 'shared/search_form' %>
    </div>
    <% if current_user %>
      <%= render partial: 'shared/navbar' %>
    <% else %>
      <%= link_to "Login", login_path, class: 'px-4 py-2 bg-gv-pistachio rounded-lg border-2 border-black shadow-hard font-bold text-gv-dark-jungle', data: { turbo_frame: "_top" } %>
    <% end %>
  <% end %>
</header>
