
<%= turbo_frame_tag 'content', class: 'col-span-12' do %>
  <% unless posts.empty? %>
    <div class="cards col-span-12">
      <% posts.each do |post| %>
        <div class="card_<%= post.id %>">
          <div class="image"><%# This div would be replaced later with image tag %></div>
          <div class="body">
            <h1><%= post.title %></h1>
            <p><%= post.description  %></p>
            <%= link_to "Leer mÃ¡s", "/posts/#{post.user.username}/#{post.title}", data: { turbo_frame: "_top" } %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>Nothing to show yet</p>
  <% end %>
<% end %>
