<section class="col-span-12">
    <h2 class="text-2xl my-8">Edit profile</h2>

  <%= form_with(model: user, class: "flex flex-col gap-3") do |f| %>
    <div class="flex flex-col items-start">
      <%= f.label :fullname, "Fullname" %>
      <%= f.text_field :fullname, class: "w-full rounded" %>
    </div>
    <div class="flex flex-col items-start">
      <%= f.label :username, "Username" %>
      <%= f.text_field :username, class: "w-full rounded" %>
    </div>
    <div class="flex flex-col items-start">
      <%= f.label :email, "Email" %>
      <%= f.email_field :email, class: "w-full rounded" %>
    </div>
    <div class="flex flex-col items-start">
      <%= f.label :password, "Password" %>
      <%= f.password_field :password, class: "w-full rounded" %>
    </div>
    <div class="flex flex-col items-start">
      <%= f.label :biography, "Biography" %>
      <%= f.text_area :biography, class: "w-full rounded h-32 min-h-full resize-none" %>
    </div>
    <div class="mt-2 text-right">
      <%= f.submit nil, class: "border border-[#6b7280] p-2 rounded" %>
    </div>
  <% end %>
</section>
