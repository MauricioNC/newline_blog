<%= form_with(model: user, url: signup_path, method: :post, class: "flex flex-col gap-4 p-10") do |f| %>
  <div class="flex flex-col items-start">
    <%= f.label :fullname, "Fullname", class: "font-semibold"%>
    <%= f.text_field :fullname, placeholder: "fullname", class: "w-full rounded-lg focus:ring-0 focus:border-black border-2 border-black shadow-hard text-gv-baltic-sea" %>
  </div>
  <div class="flex flex-col items-start">
    <%= f.label :username, "Username", class: "font-semibold" %>
    <%= f.text_field :username, placeholder: "username", class: "w-full rounded-lg focus:ring-0 focus:border-black border-2 border-black shadow-hard text-gv-baltic-sea" %>
  </div>
  <div class="flex flex-col items-start">
    <%= f.label :email, "Email", class: "font-semibold" %>
    <%= f.text_field :email, placeholder: "example@gmail.com", class: "w-full rounded-lg focus:ring-0 focus:border-black border-2 border-black shadow-hard text-gv-baltic-sea" %>
  </div>
  <%= f.submit "Create account", class: "mt-3 bg-gv-tulip-pink rounded-lg border-black border-2 shadow-hard p-2 w-[25%] hover:cursor-pointer" %>
<% end %>
