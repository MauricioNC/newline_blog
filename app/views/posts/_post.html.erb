<div class="relative col-span-12 h-screen">
  <header class="col-span-12 flex justify-between items-center my-8">
    <div class="back">
      <span class="flex gap-1 justify-center items-center"><i class="fa-solid fa-arrow-left"></i>Back</span>
    </div>
    <%= link_to 'Login', "", class: "border-2 border-black rounded-lg px-4 py-1.5" %>
  </header>
  <div class="col-span-12">
    <div><%= post.title %></div>
    <div><%= post.content %></div>
    <div><%= post.raiting %></div>
    <ul>
      <% post.tags.each do |t| %>
        <li><%= t %></li>
      <% end%>
    </ul>
  </div>
</div>
